#!/usr/bin/env bash

####################################################################
####################################################################
# Autoload scripts (do not touch this section)
####################################################################

readonly SCRIPT_DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
readonly DOKMAN_DIR="${SCRIPT_DIR}/:dokmanDirName:"
readonly DOKMAN_SITE_NAME=":dokmanSiteName:"
source "${DOKMAN_DIR}/helpers/autoload.sh"

autoload "${DOKMAN_DIR}/helpers"

####################################################################
####################################################################
# Script setup part (modify it to fit you needs)
####################################################################

function usage
{
    local siteName=$(foregoundColor "${DOKMAN_SITE_NAME}", "yellow")

    write "Script for installing ${siteName} docker setup"
    write ""
    write "   -h | --help      for this help message"
    write "   -v | --verbose   for more verbose output"
    # add your own switches description
    write ""
}

verbose=0
while [ "$1" != "" ]; do
    case $1 in
        -v | --verbose )        verbose=1
                                ;;
        -h | --help )           usage
                                exit
                                ;;
        # add your own switches and logic
    esac
    shift
done

####################################################################
####################################################################
# Custom function (user defined)
####################################################################










####################################################################
####################################################################
# Installation part (user defined)
####################################################################









